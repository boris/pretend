{
  "name": "Deploy Web App",
  "steps": [
    { "desc": "Clone repository", "cmd": "git clone https://example.com/repo.git" },
    { "desc": "Change directory", "cmd": "cd repo" },
    {
      "desc": "Install dependencies",
      "steps": [
        { "desc": "Node.js", "cmd": "npm install" },
        { "desc": "Python", "cmd": "pip install -r requirements.txt" }
      ]
    },
    { "desc": "Restart service", 
      "steps": [
        { "desc": "Restart","cmd": "systemctl restart app" },
        { "desc": "Check status","cmd": "systemctl status app" }
      ]
    }
  ]
}

